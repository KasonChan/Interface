# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

POST    /                           controllers.Users.signin

# Logout
POST    /logout                     controllers.Users.logout

# Guest page
GET     /guest                      controllers.Application.guest

POST    /guest                      controllers.Files.upload

# Test page
GET     /test                       controllers.Application.test

# Signup page
GET     /signup                     controllers.Application.signup

POST    /signup                     controllers.Users.create

# Users page
GET     /users                      controllers.Users.list

# Update page
GET     /update/:username           controllers.Users.listUser(username: String)

POST    /update/:username           controllers.Users.update(username: String)

# Destination page
GET     /destination                controllers.Application.destination

POST    /destination                controllers.Destinations.create

# Destinations page
GET     /destinations               controllers.Destinations.list

# Submission page
GET     /submission                 controllers.Submissions.submit

POST    /submission                 controllers.Files.upload  

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
