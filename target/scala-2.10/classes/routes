# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Guest page
GET     /guest                      controllers.Application.guest

POST    /guest                      controllers.Files.upload

# Test page
GET     /test                       controllers.Application.test

# POST    /test                       controllers.Files.upload

# Signup page
GET     /signup                     controllers.Application.signup

POST    /signup                     controllers.Users.signup

GET     /users                      controllers.Users.list

GET     /update/:username           controllers.Users.update(username: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
